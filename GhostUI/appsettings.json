{
  "ConnectionStrings": {
    "userDatabase": "Host=localhost;Database=userdata;Username=reactuser;Password=P@ssw0rd",
    "jwtDB": "Host=localhost;Database=jwtuserdb;Username=reactuser;Password=P@ssw0rd"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Verbose",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/api-.log",
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.json",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName", "LocalTime" ]
  },
  "JWTAuth": {
    "Issuer": "JWTbackendiss",
    "Audience": "JWTbackendaud"
  },
  "AuthSetting": {
    "SecretKey": "!AuthSeeCryptKey!",
    "Secret": "",
    "Issuer": "Nswag Api JWT Auth",
    "Audience": "Nswag Api JWT Auth"
  },
  "Compression": {
    "EnableForHttps": true,
    "MimeTypes": [
      "text/css",
      "text/xml",
      "text/html",
      "text/plain",
      "application/xml",
      "application/javascript"
    ]
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "HTTP-Api-Basic and UI",
        "Uri": "http://localhost:52580/healthchecks-json"
      }
    ],
    "Webhooks": [],
    "EvaluationTimeOnSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60

  }

}
